{
    "compilerOptions": {
        // "declaration": true,
        // "declarationDir": "build",
        "baseUrl": "./",
        "outDir": "./lib/",
        "sourceMap": false,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "experimentalDecorators": true,
        "lib": ["es6", "dom"],
        // "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            // add node as an option
            "node"
         ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}